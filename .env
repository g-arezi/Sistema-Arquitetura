# Configuração de Ambiente - Windows/IIS
# IMPORTANTE: Este arquivo deve ser criado no servidor Windows
# NUNCA commitar este arquivo com dados reais para o repositório

# Ambiente
APP_ENV=production
APP_DEBUG=false
APP_URL=https://seu-dominio.com.br
APP_TIMEZONE=America/Sao_Paulo

# Banco de Dados
DB_HOST=localhost
DB_NAME=sistema_arquitetura
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Email
MAIL_HOST=smtp.seu-provedor.com
MAIL_PORT=587
MAIL_USERNAME=noreply@seu-dominio.com.br
MAIL_PASSWORD=sua_senha_email_aqui
MAIL_ENCRYPTION=tls
MAIL_FROM_NAME="Sistema de Arquitetura"
MAIL_FROM_ADDRESS=noreply@seu-dominio.com.br

# Segurança
HASH_COST=12
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRY=3600
SESSION_SECURE=true

# Armazenamento Windows
STORAGE_DOCUMENTS_PATH=C:\inetpub\wwwroot\sistema-arquitetura\storage\documents
STORAGE_TEMP_PATH=C:\inetpub\wwwroot\sistema-arquitetura\storage\temp

# Limites
MAX_UPLOAD_SIZE=15728640
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,dwg

# Logs Windows
ERROR_LOG_PATH=C:\inetpub\logs\sistema-arquitetura\error.log
ACCESS_LOG_PATH=C:\inetpub\logs\sistema-arquitetura\access.log

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Backup Windows
BACKUP_ENABLED=true
BACKUP_PATH=C:\backups\sistema-arquitetura
BACKUP_RETENTION_DAYS=30

# Windows específico
WINDOWS_IIS_REWRITE=true
WINDOWS_PHP_CGI=false
WINDOWS_FASTCGI=true

# IIS Configuration
IIS_POOL_NAME=sistema-arquitetura
IIS_SITE_NAME=sistema-arquitetura
IIS_BINDING_PORT=443
IIS_BINDING_PROTOCOL=https
